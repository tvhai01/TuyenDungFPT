<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/title"
                android:textColor="@color/form"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/title2"
                android:textColor="@color/form"
                android:textSize="27dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/duongvien_goctron"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/comme" />

            <AutoCompleteTextView
                android:id="@+id/editChucDanh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/form"
                android:hint="@string/chucdanh"
                android:inputType="textPersonName"
                android:textSize="23dp"
                android:textStyle="italic|normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/duongvien_goctron"
            android:orientation="horizontal">
            //tên

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:src="@drawable/list" />

            <AutoCompleteTextView
                android:id="@+id/edtNganhNghe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nganhnghe"
                android:paddingTop="10dp"
                android:textSize="23dp"
                android:textStyle="italic|normal" />
        </LinearLayout>
        // tìm kiếm theo thanh pho , có trang chi tiết cho search

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/duongvien_goctron"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/maps" />
            //tên thành

            <AutoCompleteTextView
                android:id="@+id/edtDiaDiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/diadiem"
                android:paddingTop="10dp"
                android:textSize="23dp"
                android:textStyle="italic|normal" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/searchbtn"
            android:text="Search" />


    </LinearLayout>

</LinearLayout>